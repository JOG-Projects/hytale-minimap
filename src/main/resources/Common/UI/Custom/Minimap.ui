@MyTex = PatchStyle(TexturePath: "map.png");

Group {
  LayoutMode: Left;
  Anchor: (Top: 20, Height: 60);

  Group #MyPanel {
    Background: @MyTex;
    Anchor: (Left: 20, Top: 20, Width: 400, Height: 400);
    Padding: (Horizontal: 20, Vertical: 10);
    LayoutMode: Left;

    Label #X {
      Style: (FontSize: 32, Alignment: Center);
      Anchor: (Top: 50);
      Text: "MyText";
      Padding: (Full: 10);
    }

    Label #Y {
      Style: (FontSize: 32, Alignment: Center);
      Anchor: (Top: 50);
      Text: "MyText";
      Padding: (Full: 10);
    }
  }
}